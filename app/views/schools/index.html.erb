<section class="flex justify-center flex-col mt-10">
<div class="flex justify-between">
    <h1 class="text-3xl font-bold text-[#64748B]">All Schools</h1>

    <button class="bg-[#3490D1] text-white rounded-2xl p-3">
        <%= link_to "new school", new_school_path %>
    </button>
</div>
<div class="rounded-2xl bg-white p-3">
	<%= form_tag(schools_path, method: :get) do %>
		<div class="flex gap-2 mb-2">
			<div class="border rounded-lg">
				<%= text_field_tag :search %>
			</div>
				<%= submit_tag "Search", class: "ml-2 px-3 py-1 border rounded-lg bg-[#3490D1] text-white" %>
				<%= link_to "Clear", schools_path, class: "ml-1 px-3 py-1 border rounded-lg" %>
		</div>
  <% end %>
    <div class="grid grid-cols-6 bg-[#f1f5f9] gap-2 p-2 rounded-xl font-bold">
        <p>ID</p>
        <p>Arabic Name</p>
        <p>English Name</p>
        <p>Status</p>
        <p>Address</p>
        <p>Actions</p>
    </div>
    <% if @schools.empty? %>
        <p class="mx-auto p-2">There is Schools yet</p>
    <% else %>
    <% @schools.each do |school| %>
        <div class="grid grid-cols-6 gap-2 p-2 items-center">
            <p><%= school.id %> </p>
            <p><%= school.name_ar %> </p>
            <p><%= school.name_en %> </p>
            <p><%= school.status %> </p>
            <p><%= school.address %> </p>
            <div class="flex">
                <%= link_to school do %>
                    <svg width="35" height="35" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="cursor-pointer pt-3">
                        <g clip-path="url(#wcootrja8a)">
